<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".verifyotp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="otp verification using firebase"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="OTP Verfication"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="60dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the OTP Sent On"
            android:textAlignment="center"
            android:layout_marginBottom="0dp"
            android:textColor="#474444"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/mobilenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textColor="#474444"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/border"
                android:id="@+id/inputcode1"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <EditText
                android:gravity="center"

                android:background="@drawable/border"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/inputcode2"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"/>


            <EditText
                android:gravity="center"

                android:background="@drawable/border"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/inputcode3"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"/>


            <EditText
                android:gravity="center"

                android:background="@drawable/border"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/inputcode4"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <EditText
                android:gravity="center"

                android:background="@drawable/border"

                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/inputcode5"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"/>



            <EditText
                android:gravity="center"

                android:background="@drawable/border"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/inputcode6"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did not Recieved The OTP?"/>

            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Resend Otp"
                android:textColor="#F44336"
                android:textStyle="bold"/>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/verify_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:text="VERIFY"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/buttons"
                android:textStyle="bold"
                />

            <androidx.core.widget.ContentLoadingProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progbar"
                android:visibility="gone"/>

        </LinearLayout>




    </LinearLayout>



</ScrollView>