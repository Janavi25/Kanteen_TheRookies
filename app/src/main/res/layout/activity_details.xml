<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@drawable/input_design"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="4dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/bluebox"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>


        <EditText

            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/name"
            android:hint="Enter Name"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:backgroundTint="#000"
            />


        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/profile_name"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>


        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/email"
            android:hint="Enter Email"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:backgroundTint="@color/colorPrimary"
            />


        <TextView
            android:id="@+id/Academic_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/profile_phone"
            android:text="Academic Detail"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>


        <EditText
            android:inputType="text"
            android:id="@+id/profile_academic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/Address"
            android:hint="eg: SE-COMPS B"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:backgroundTint="@color/colorPrimary"
            />

        <Button
            android:layout_marginTop="50dp"
            android:background="@drawable/buttons"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/profile_edit"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/profile_academic"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="20sp"
            android:text=" Continue >>"/>






    </LinearLayout>
</ScrollView>